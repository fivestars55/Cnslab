import javax.crypto.Cipher;
import javax.crypto.KeyGenerator;
import javax.crypto.SecretKey;
import java.util.Scanner;

class BlowFish {
    public static void main(String[] args) throws Exception {

        // create Blowfish key generator
        KeyGenerator keyGen = KeyGenerator.getInstance("Blowfish");

        // generate key (Blowfish supports key sizes from 32 to 448 bits)
        keyGen.init(128);
        SecretKey secretKey = keyGen.generateKey();

        // create Blowfish cipher
        Cipher cipher = Cipher.getInstance("Blowfish");

        // input message
        System.out.println("Enter the string: ");
        Scanner sc = new Scanner(System.in);
        String text = sc.nextLine();

        // encrypt
        cipher.init(Cipher.ENCRYPT_MODE, secretKey);
        byte[] encrypted = cipher.doFinal(text.getBytes());

        // decrypt
        cipher.init(Cipher.DECRYPT_MODE, secretKey);
        byte[] decrypted = cipher.doFinal(encrypted);

        System.out.println("Encrypted text is : " 
            + java.util.Base64.getEncoder().encodeToString(encrypted));
        System.out.println("Decrypted text is : " + new String(decrypted));

        sc.close();
    }
}
